<div class="w-1/2 p-2">

    <%= form_for @category, url: create_category_path do |f| %>
        
            <div class="field font-bold text-xl">
                <label>üìù Category name:</label><br /><br />
                <%= f.text_field :name, autocomplete: :off, class: 'w-full text-base text-black p-3 rounded', placeholder: 'enter name' %>
            </div>
            <% if @category.errors.any? %>
                        <ul classs="validation-message">
                            <% @category.errors.full_messages.each do |message| %>
                                <li style="list-style-type:none; color:#ff2e46;"><%= message.downcase %></li>
                            <% end %>
                        </ul>
            <% end %><br />
            <div class="actions flex justify-center gap-10">
                <%= f.submit '‚úî Submit', data: {confirm: 'Are you sure?'}, class: 'bg-green-700 p-2 rounded text-white hover:bg-red-700 text-white'%>
                
                <%= link_to 'üëà categories', categories_path, class: 'bg-green-700 p-2 rounded text-white hover:bg-red-700 text-white' %>
            </div>
        
    <% end %>

</div>