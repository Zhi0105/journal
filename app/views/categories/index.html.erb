<%= render 'main'%>
<br /></br /><br />


    <ul class="grid justify-center gap-2 grid-cols-4 sm:grid-cols-1 md:grid-cols-2 p-2">
    <% @categories.each do |category|%>
    <% @count = Task.where("category_id = ?", category.id).count%>
        
            <li>
                <div class="max-w-sm rounded overflow-hidden shadow-lg bg-green-200">
                    <div class="px-6 py-4">
                        <div class="font-bold text-2xl mb-2 capitalize"><%= category.name %></div>
                        
                        <div class="indent-1 text-xs"><span class="font-bold"> Date created: </span><%= category.created_at.strftime('%a %d %b %Y')%><!--&nbsp; <%= category.created_at.strftime("at %I:%M%p")%>--></div>
                        <div class="indent-1 text-xs"><span class="font-bold"> Last modified: </span><%= category.updated_at.strftime('%a %d %b %Y')%><!--&nbsp; <%= category.updated_at.strftime("at %I:%M%p")%>--></div>
                        <br />
                        <p>task count : <span class="font-bold"><%= @count%></span></p>
                        
                    </div>
                    <div class="flex justify-center gap-5">
                        <%= link_to '👓view', category_path(category.id), class: 'bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2' %>
                        <%= link_to '⚙ edit', edit_category_path(category.id), class: 'bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2' %>
                    </div>
                </div><br />
                <div class="flex justify-center">
                <%= link_to '➕ task', new_category_task_path(category.id), class: 'text-center w-full bg-gray-200 rounded px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2' %>
                </div>
            </li>
    <% end %>
    </ul>
    
