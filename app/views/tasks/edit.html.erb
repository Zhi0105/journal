<div class="h-screen bg-green-200 flex items-center justify-center p-5 w-screen">
    <%= form_with model: [@category, @task] do |f| %>
    <div>
        
        <div class="field font-bold text-2xl">
            <% if @task.errors.any? %>
                    <ul classs="validation-message">
                        <% @task.errors.full_messages.each do |message| %>
                            <li style="list-style-type:none; color:#ff2e46;"><%= message %></li>
                        <% end %>
                    </ul>
            <% end %>
            <label>Modify task name:</label>
            <%= f.text_field :name, autocomplete: :off, class: 'text-black p-2 rounded w-full', placeholder: 'enter name', class: 'w-full p-2 rounded'%>
        </div><br />

        <div class="actions flex justify-center gap-10">
            <%= f.submit 'âœ” Submit', data: {confirm: 'Are you sure?'}, class: 'bg-green-700 p-2 rounded text-white hover:bg-red-700 text-white'%>
            
            <%= link_to 'ðŸ‘ˆ back', category_path(@category.id), class: 'bg-green-700 p-2 rounded text-white hover:bg-red-700 text-white' %>
        </div>
    </div>
<% end %>
</div>
